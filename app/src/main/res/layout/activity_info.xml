<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".Info">

    <include
        android:id="@+id/navigationView"
        layout="@layout/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/id_info_textView_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Info"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/id_info_textView_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/navigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_info_textView_heading"
        app:layout_constraintVertical_bias="0.05" />

    <EditText
        android:id="@+id/id_info_editText_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:alpha="0.7"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:inputType="textPersonName"
        android:onClick="clearText"
        android:text="name"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/id_info_textView_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/id_info_textView_name"
        app:layout_constraintTop_toTopOf="@+id/id_info_textView_name" />

    <TextView
        android:id="@+id/id_info_textView_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Height (inches):"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/navigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/id_info_textView_name"
        app:layout_constraintTop_toBottomOf="@+id/id_info_textView_name"
        app:layout_constraintVertical_bias="0.07" />

    <EditText
        android:id="@+id/id_info_editText_height"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:alpha="0.7"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:inputType="numberDecimal"
        android:onClick="clearText"
        android:text="height"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/id_info_textView_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/id_info_textView_height"
        app:layout_constraintTop_toTopOf="@+id/id_info_textView_height" />

    <TextView
        android:id="@+id/id_info_textView_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weight (lbs):"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/navigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/id_info_textView_height"
        app:layout_constraintTop_toBottomOf="@+id/id_info_textView_height"
        app:layout_constraintVertical_bias="0.07" />

    <EditText
        android:id="@+id/id_info_editText_weight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:alpha="0.7"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:inputType="numberDecimal"
        android:onClick="clearText"
        android:text="weight"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/id_info_textView_weight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/id_info_textView_weight"
        app:layout_constraintTop_toTopOf="@+id/id_info_textView_weight" />

    <TextView
        android:id="@+id/id_info_textView_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age:"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/navigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/id_info_textView_weight"
        app:layout_constraintTop_toBottomOf="@+id/id_info_textView_weight"
        app:layout_constraintVertical_bias="0.07" />

    <EditText
        android:id="@+id/id_info_editText_age"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:alpha="0.7"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:inputType="textPersonName"
        android:onClick="clearText"
        android:text="age"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/id_info_textView_age"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/id_info_textView_age"
        app:layout_constraintTop_toTopOf="@+id/id_info_textView_age" />

    <LinearLayout
        android:id="@+id/id_info_linearLayout_radioGroups"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum=".3"
        app:layout_constraintBottom_toTopOf="@+id/navigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_info_editText_age"
        app:layout_constraintVertical_bias="0.25">

        <RadioGroup
            android:id="@+id/id_info_radioGroup_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".1">

            <TextView
                android:id="@+id/id_info_textView_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Gender"
                android:textColor="#FFFFFF"
                android:textSize="26sp" />

            <RadioButton
                android:id="@+id/id_info_radioButton_male"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Male"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <RadioButton
                android:id="@+id/id_info_radioButton_female"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Female"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />
        </RadioGroup>

        <RadioGroup
            android:id="@+id/id_info_radioGroup_weightGoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".1">

            <TextView
                android:id="@+id/id_info_textView_weightGoal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Weight Goal"
                android:textColor="#FFFFFF"
                android:textSize="26sp" />

            <RadioButton
                android:id="@+id/id_info_radioButton_lose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lose"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <RadioButton
                android:id="@+id/id_info_radioButton_gain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gain"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <RadioButton
                android:id="@+id/id_info_radioButton_maintain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Maintain"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />
        </RadioGroup>

        <RadioGroup
            android:id="@+id/id_info_radioGroup_activeness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".1">

            <TextView
                android:id="@+id/id_info_textView_activeness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Activeness"
                android:textColor="#FFFFFF"
                android:textSize="26sp" />

            <RadioButton
                android:id="@+id/id_info_radioButton_low"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Low"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <RadioButton
                android:id="@+id/id_info_radioButton_average"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Average"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <RadioButton
                android:id="@+id/id_info_radioButton_high"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="High"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />
        </RadioGroup>
    </LinearLayout>

    <Button
        android:id="@+id/id_info_button_calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#800080"
        android:text="Calculate calories"
        app:layout_constraintBottom_toTopOf="@+id/navigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_info_linearLayout_radioGroups" />

</androidx.constraintlayout.widget.ConstraintLayout>